<Window x:Class="Othello.GameView.DrawTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello.GameView"
        mc:Ignorable="d"
        Title="DrawTextBox"  Height="160" Width="290">
    <Canvas Background="#FF04403C">
        <TextBlock x:Name="Message" Text="There is no winner, draw!!" FontSize="15" HorizontalAlignment="Center" Foreground="#FFC8EAD7" Canvas.Left="40" Canvas.Top="20"/>
        <TextBlock Name="WinnerGra" Text="Better luck next time!" FontSize="15" Foreground="#FFC8EAD7" Canvas.Top="60"  Canvas.Left="70"/>
        <Button Name="Close" Content="Close" Click="Close_Click" HorizontalAlignment="Center" Canvas.Bottom="10" Canvas.Left="85" Width="100" Height="50" Foreground="#FFC8EAD7" Background="Black"/>
    </Canvas>
</Window>
